#!/bin/bash

name="."

if (( $# >= 1 )); then
    name=$1
fi

QT_INC_DIR='~/Qt/6.2.1/gcc_64/include'

vim "+ cd $name" \
  "+ set tags+=tags;,./tags" \
  "+ set tags+=$QT_INC_DIR/tags" \
  "+ set path+=$name/**" \
  "+ set path+=/usr/local/include/**"  \
  $name/.label_0_0 $name/.project_0_0 $name/.tmp_0_0

