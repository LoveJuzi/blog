#!/bin/bash

name="."

if (( $# >= 1 )); then
    name=$1
fi

gvim "+ cd $name" \
  "+ set tags+=tags;,./tags" \
  "+ set tags+=$QT_INC_DIR/tags" \
  "+ set path+=$name/**" \
  "+ set path+=/usr/local/include/**"  \
  "+ set path+=$QT_INC_DIR/**" \
  $name/.label_0_0 $name/.project_0_0 $name/.tmp_0_0
